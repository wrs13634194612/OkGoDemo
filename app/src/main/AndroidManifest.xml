<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.okgodemotwo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OkGoDemoTwo">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!--     1.获取所有数据     -->
        <activity android:name=".DeviceDataActivity" />
        <!--     2.删除设备      -->
        <activity android:name=".DeleteProductActivity" />
        <!--     3.获取要新增的设备    -->
        <activity android:name=".AddProductActivity" />
        <!--     4.新增设备       -->
        <activity android:name=".AddDeviceDataActivity" />



        <!--     0.首页房间全开全关     -->
        <activity android:name=".RoomStateActivity" />
        <!--     1.遥控器-添加遥控-选择红外设备接口      -->
        <activity android:name=".ControllerRedActivity" />
        <!--     2.查找模式-详情-内部设备    -->
        <activity android:name=".SearchDeviceActivity" />
        <!--     3.更新模式       -->
        <activity android:name=".UpdateActivity" />
        <!--     4.获取定时执行状态     -->
        <activity android:name=".TimerStateActivity" />
        <!--     5.查询设备数量      -->
        <activity android:name=".SearchDeviceNumActivity" />

    </application>

</manifest>