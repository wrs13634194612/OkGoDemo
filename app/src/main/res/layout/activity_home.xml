<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_device_all"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="  0.获取所有数据 "
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_device_share"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="  1.获取Share所有数据   "
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_device_detail"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="   2.获取要新增的设备 "
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_device_add"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text=" 3.新增设备   "
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_device_delete"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="  4.删除设备  "
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_add_all"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="  5.汇总新增设备  "
        android:textSize="20sp" />


</LinearLayout>